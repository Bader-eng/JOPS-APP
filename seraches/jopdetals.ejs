<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section>
        <% jop.forEach(element => { %>
            <div>
                <li>
                    <%=jop.title %> 
                </li>
                <li>
                    <%=jop.url %> 
                </li>
                <li>
                    <%=jop.company  %> 
                </li>
                <li>
                    <%=jop.location%> 

                </li>
                <li>
                    <%=jop.description%> 
                    
                </li>
                <form action="/deletTASK/<%= jop.id %>?_method=delete " method="POST">
                    <button>delete</button>
                </form>
                <form action="/updateTASK/<%= jop.id %>?_method=put " method="POST">
                    <input name="title" value="<%= jop.title %>" hidden>
                    <input name="url" value="<%= jop.url %>" hidden>
                    <input name="company" value="<%= jop.company %> " hidden>
                    <input name="location" value="<%= jop.location %> " hidden>
                    <input name="description" value="<%=jop.description%>" hidden>
                    <button>update</button>
                </form>
            </div>
         
        <% }) %>
    </section>
</body>
</html>